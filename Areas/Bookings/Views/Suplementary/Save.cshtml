
@model HotelApplication.Models.Suplementary

@{
    ViewData["Title"] = "Save";
}

<div class="row">
    <div class="col-md-1">
        <a asp-action="Index" class="btn btn-light" style="border-radius:50%"><i class='bx bx-arrow-back'></i></a>
    </div>
    <div class="col-md-5">
        <h3 class="h3">Suplementary Service</h3>
    </div>
</div>

<div class="container">
    <form asp-action="Save" enctype="multipart/form-data">
        <hr />
        <div class="row">
            <div class="col-md-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row form-group">
                    <label asp-for="Name" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Name" class="form-control" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="row form-group">
                    <label asp-for="Quantity" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Quantity" class="form-control" />
                    </div>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="row form-group">
                    <label asp-for="Amount" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="Amount" class="form-control" />
                    </div>
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="row form-group">
                    <label asp-for="TotalAmount" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        <input asp-for="TotalAmount" class="form-control" />
                    </div>
                    <span asp-validation-for="TotalAmount" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <div class="form-group" style="text-align:center;">
            <input type="submit" value="Save" class="col-sm-6 btn btn-primary" style="border-radius:50px;" />
        </div>
    </form>
</div>