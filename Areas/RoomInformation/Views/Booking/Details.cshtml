@model HotelApplication.Models.Booking

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Booking</h4>
    <a href="#" class="btn btn-primary">Book Now</a>
    <hr />
    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Room.RoomNumber) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Room.RoomNumber) </dd>
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Room.RoomType.RoomTypeName) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Room.RoomType.RoomTypeName) </dd>
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Room.Price) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Room.Price) </dd>
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Room.Available) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Room.Available) </dd>
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Room.Description) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Room.Description) </dd>
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Room.MaximumGuests) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Room.MaximumGuests) </dd>
    </dl>

    <h4>Features</h4>
    @foreach (var feature in ViewBag.Features as IEnumerable<Feature>)
    {
        <div class="row" style="margin-bottom:3px;">
            <p class="col-sm-5">@feature.Name</p>
            <img class="img-responsive" style="border-radius:5px;" width="80" height="60" src="@feature.Icon" asp-append-version="true" />
        </div>
    }

    <h4>Images</h4>
    @foreach (var image in ViewBag.Images as IEnumerable<Image>)
    {
        <img class="col-sm-12" style="width: 185px; padding: 5px; border-radius: 10px; " src="@image.ImageUrl" asp-append-version="true" alt="@image.Name" />
    }
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
